<!-- ko with: home -->
<h1 data-bind="text: myApiText">
</h1>

<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>Brand</th>
                <th>Device Name</th>
                <th>Status</th>
                <th>Type</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: phoneData">
            <tr>
                <td data-bind="text: brand"></td>
                <td data-bind="text: deviceName"></td>
                <td data-bind="text: status"></td>
                <td data-bind="text: type"></td>
                <td data-bind="text: price"></td>
                <td>
                    <!-- ko if: isAddedToCart() -->
                    <button class="btn btn-success"
                            data-bind="click: $parent.removeFromCart.bind($data)">
                        Remove From Cart
                    </button>
                    <!-- /ko -->
                    <!-- ko if: !isAddedToCart() -->
                    <button class="btn btn-primary"
                            data-bind="click: $parent.addToCart.bind($data)">
                        Add To Cart
                    </button>
                    <!-- /ko -->
                </td>
            </tr>
        </tbody>
    </table>
</div>
<!-- /ko -->
